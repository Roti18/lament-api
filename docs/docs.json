[
    {
        "id": "intro",
        "title": "Introduction",
        "content": "Lament API provides a secure, lightweight interface for managing music resources (Tracks, Artists, Albums, Categories). It is built with Hono and adheres to RESTful principles."
    },
    {
        "id": "auth",
        "title": "Authentication",
        "content": "All endpoints (except GET /) require an API Key. Pass it in the header `x-api-key`.",
        "endpoints": []
    },
    {
        "id": "tracks",
        "title": "Tracks",
        "content": "Manage music tracks.",
        "endpoints": [
            {
                "method": "GET",
                "path": "/tracks",
                "desc": "List all tracks",
                "example": "curl -H \"x-api-key: YOUR_KEY\" https://api.lament.ronxyz.xyz/tracks"
            },
            {
                "method": "GET",
                "path": "/tracks/:id",
                "desc": "Get a specific track",
                "example": "curl -H \"x-api-key: YOUR_KEY\" https://api.lament.ronxyz.xyz/tracks/123"
            },
            {
                "method": "POST",
                "path": "/tracks",
                "desc": "Create a track",
                "example": "curl -X POST https://api.lament.ronxyz.xyz/tracks -d '{\"title\":\"...\"}'"
            }
        ]
    },
    {
        "id": "artists",
        "title": "Artists",
        "content": "Manage artist profiles.",
        "endpoints": [
            {
                "method": "GET",
                "path": "/artists",
                "desc": "List all artists",
                "example": "curl -H \"x-api-key: YOUR_KEY\" https://api.lament.ronxyz.xyz/artists"
            }
        ]
    },
    {
        "id": "albums",
        "title": "Albums",
        "content": "Manage albums and collections.",
        "endpoints": [
            {
                "method": "GET",
                "path": "/albums",
                "desc": "List all albums",
                "example": "curl -H \"x-api-key: YOUR_KEY\" https://api.lament.ronxyz.xyz/albums"
            }
        ]
    },
    {
        "id": "upload",
        "title": "Storage",
        "content": "Upload media files.",
        "endpoints": [
            {
                "method": "POST",
                "path": "/upload",
                "desc": "Upload image or audio",
                "example": "curl -F \"file=@song.mp3\" -F \"type=audio\" https://api.lament.ronxyz.xyz/upload"
            }
        ]
    }
]