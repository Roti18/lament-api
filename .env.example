# ============================================
# LAMENT API - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in the values

# --- DATABASE (REQUIRED) ---
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token

# --- SECURITY (REQUIRED) ---
MASTER_KEY=your-super-secret-master-key
JWT_SECRET=your-jwt-secret-key-change-me
GOOGLE_CLIENT_ID=your-google-client-id
ADMIN_EMAILS=example@gmail.com,another@admin.com

# --- APP CONFIG ---
PORT=3000

# --- CORS (OPTIONAL) ---
# Comma separated list of allowed origins
# Set to * for public access (default if not set)
ALLOWED_ORIGINS=*

# --- RATE LIMITING (OPTIONAL) ---
# Get these from https://console.upstash.com
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# --- IMAGEKIT STORAGE (REQUIRED for uploads) ---
IMAGEKIT_PUBLIC_KEY=your_public_key
IMAGEKIT_PRIVATE_KEY=your_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_id/